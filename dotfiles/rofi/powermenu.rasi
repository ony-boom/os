@theme "rose-pine"

configuration {
  location: 2;
  fullscreen: false;
}

* {
  background-color: transparent;
}

window {
  width: 350px;
  border-radius: 8px;
  padding: 6px;
  background-color: @bg;
  y-offset: 4px;
  border-color: @bordercolor;
}

listview {
  columns: 5;
  lines: 1;
}

mainbox {
  children: ["message", "listview"];
}

element {
  padding: 18px 12px;
  border-radius: 6px;
}

element.selected {
  border: 1px;
  background-color: @selected-background;
  border-color: @bordercolor;
}

element-text {
  color: @fg;
  font: "monspace 18";
  horizontal-align:            0.4;
}
